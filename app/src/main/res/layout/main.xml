<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".MainActivity">

    <!--
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/> -->

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Continue last program"
        android:id="@+id/btnContinueLastProgram"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_background"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="My Programs"
        android:id="@+id/btnMyPrograms"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button_normal"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select Program"
        android:id="@+id/btnSelectProgram"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button_normal"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create Program"
        android:id="@+id/btnCreateProgram"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button_normal"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:id="@+id/btnCategories"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button_normal"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Exercises"
        android:id="@+id/btnExercises"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button_normal"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Transformation"
        android:id="@+id/btnTransformation"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button_normal"
        android:layout_margin="10dp"/>

</LinearLayout>
